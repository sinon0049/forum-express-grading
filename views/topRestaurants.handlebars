<h1>人氣餐廳</h1>
<hr />
<div class="container col-8">
    {{#each data}}
        <div class="card mb-3">
            <div class="row g-0">
                <div class="col-md-4">
                <img src="{{this.image}}" alt="..." class="col-12">
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">收藏數:{{this.favoriteCounts}}</p>
                    <p class="card-text">{{this.description}}</p>
                    <div class="row">
                        <a href="/restaurants/{{this.id}}" class="btn btn-primary mr-2" role="button">show</a>
                        {{#if isFavorited }}
                            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="ml-2"><button type="submit"
                                class="btn btn-danger">移除最愛</button></form>
                        {{else}}
                            <form action="/favorite/{{this.id}}" method="POST" class="ml-2"><button type="submit" class="btn btn-primary">加到最愛</button></form>
                        {{/if}}
                    </div>
                </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
